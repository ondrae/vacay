<!DOCTYPE html>
<html>
  <head>
    <title>Vacay</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Vacay</title>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
    <link href='https://api.tiles.mapbox.com/mapbox-gl-js/v0.47.0/mapbox-gl.css' rel='stylesheet' />
    <link href="https://unpkg.com/js-offcanvas/dist/_css/prefixed/js-offcanvas.css" rel="stylesheet">

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <script src='https://api.tiles.mapbox.com/mapbox-gl-js/v0.47.0/mapbox-gl.js'></script>
    <script src="https://unpkg.com/js-offcanvas/dist/_js/js-offcanvas.pkgd.min.js"></script>
  </head>

  <body>
    <div class="main">
      <nav class="navbar is-info">
        <div class="navbar-brand">
          <a class="navbar-item" href="/">Vacay</a>
          <a id="hamburger" role="button" class="navbar-item"><i class="fas fa-bars"></i></a>
        </div>
      </nav>

      <%= yield %>
    </div>

    <aside id="menu" class="menu">
      <nav class="navbar is-info"></nav>
      <div id="menu-content">
        <ul class="menu-list">
          <% if user_signed_in? %>

            <% if @map %>
              <p class="menu-label">
                <%= @map.name %>
              </p>


              <%= form_for @point, remote: true do |f| %>
                <div class="field">
                  <label class="label">Add to the map <i class="fas fa-map-marker-alt"></i></label>
                  <div class="control">
                    <%= f.text_field :yelp_link, class: "input", placeholder: "https://www.yelp.com/biz/golden-gate-park-san-francisco" %>
                  </div>
                  <%= f.hidden_field :map_id, value: @map.id %>
                  <p class="help">Paste in a yelp link</p>
                </div>
              <% end %>

              <ul class="menu-list">
                <% @map.points.each do |point| %>
                  <a><%= point.name %></a>
                <% end %>
              </ul>

              <br />
            <% end %>

            <p class="menu-label">
              Your Maps
            </p>
            <% current_user.maps.each do |map| %>
              <li>
              <% if map.id.to_s == params[:id] %>
                  <%= link_to map.name, map_path(map.id), class: "is-active" %>
              <% else %>
                  <%= link_to map.name, map_path(map.id) %>
              <% end %>
              </li>
            <% end %>
          <% else %>
            <li>
              <%= link_to "Sign In", new_user_session_path %>
            </li>
          <% end %>
        </ul>
      </div>
    </aside>
  </body>
</html>
